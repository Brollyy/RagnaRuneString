<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net8.0;net7.0</TargetFrameworks>
    <LangVersion>12.0</LangVersion>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Title>RagnaRuneString</Title>
    <Authors>Brollyy</Authors>
    <PackageProjectUrl>https://github.com/Brollyy/RagnaRuneString</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/Brollyy/RagnaRuneString</RepositoryUrl>
    <PackageLicenseExpression>GPL-3.0-or-later</PackageLicenseExpression>
    <Description>Small util package for serializing and deserializing Ragnarock runes into a compact string format.</Description>
    <PackageReleaseNotes>
      1.0.1
      - Fixed a bug in deserialization code that caused it to read too many bytes when parsing double runes section.
      - BREAKING CHANGE: changed the encoding of row timing to avoid issues with deserialized runes not being close enough to the original input.
      - Added missing deserialization tests and idempotency tests for version 1.
    </PackageReleaseNotes>
    <Version>1.0.1</Version>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\..\LICENSE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

</Project>
